datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Car {
  id         String   @id @default(cuid())
  make       String
  model      String
  year       Int
  priceUSD   Int
  horsepower Int?
  zeroTo60   Float?
  imageUrl   String?
  listedAt   DateTime @default(now())
}
